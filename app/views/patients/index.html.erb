<h1> Patients</h1>
<hr />
<h2><%= @patients.length <= 0 ? "No Patients" : "" %></h2> 
<%= link_to 'Add Patient', new_patient_path, class: "ui inverted blue button" %>
<table class="ui celled table">
<thead>
<tr>
<th> Patient Name </th>
<th> Physicians </th>
</tr>
</thead>
<tbody>
<tr>
  <% @patients.each do |patient| %>
   
     <td> <%= link_to patient.name, patient%></td>
     <td> <%= link_to patient.physicians.name, [@physician, patient] %></td>
    
 
  </tr>
   <% end %>
</tbdy>
</table>